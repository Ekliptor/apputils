{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./build",
    "declaration": true,
    "declarationDir": "./build",
    "allowJs": false,
    "sourceMap": true,
    "pretty": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "watch": true
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "build"
  ]
}
